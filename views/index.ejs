      <button type="button" class="cat-cta">create</button>
      </span> -->

      <form method="POST" action="/chat" class="flx-center-row">
        <input
          class="glassmorph"
          type="text"
          name="message"
          placeholder="Ask me anything"
          aria-label="Chat message"
          maxlength="500"
          value="<%= typeof lastMessage !== 'undefined' ? lastMessage : '' %>"
        />
        <button class="submit-btn flx-center-row" type="submit">
          <span
            class="iconify masked-cont"
            data-icon="_custom-icons/sparkle.svg"
          ></span>
        </button>
      </form>
    </section>
    <section class="flx-center-col chat-tc">
      <div>
        <button type="button" onclick="location.href='/chat'">Open Chat</button>
        <button
          type="button"
          class="primary cta-menu"
          onclick="location.href='/signup'"
        >
          Create Account
        </button>
      </div>
      <a href="#" class="link-underline">Terms & Conditions</a>

      <span class="chat-greeting flx-center-col">
        <h6>Welcome, User</h6>
        <h1>How can I help you today?</h1>
      </span>
      <form method="POST" action="/chat" class="flx-center-row">
        <input
          class="glassmorph"
          type="text"
          name="message"
          placeholder="Ask me anything!"
          required
        />

        <button class="submit-btn flx-center-row" type="submit">
          <span
            class="iconify masked-cont"
            data-icon="_custom-icons/sparkle.svg"
          ></span>
        </button>
      </form>
    </section>
